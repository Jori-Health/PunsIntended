{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Patient Unit of Record",
  "type": "object",
  "required": ["patient_uid","mrn_set","demographics","diagnoses","provenance"],
  "properties": {
    "patient_uid": {"type": "string"},
    "mrn_set": {"type": "array","items":{"type":"string"}},
    "demographics": {
      "type": "object",
      "properties": {
        "sex": {"type":"string"},
        "dob": {"type":"string"}
      }
    },
    "diagnoses": {"type":"array","items":{"type":"string"}},
    "provenance": {
      "type":"object",
      "properties": {
        "notes_linked": {"type":"integer"},
        "sources": {"type":"array","items":{"type":"string"}}
      }
    },
    "conflict_set": {"type":"array","items":{"type":"string"}}
  }
}

